  <!-- 配置上下文参数，可以在servlet中通过getServletConfig().getServletContext()来获取上下文对象，然后调用其中的getInitParameter("key")获取参数 -->
  <context-param>
  	<param-name>upload folder</param-name>
  	<param-value>attachment</param-value>
  </context-param>
  
  <servlet>
    <servlet-name>hello</servlet-name>
    <servlet-class>com.gb.servletdemo.HelloServlet</servlet-class>
