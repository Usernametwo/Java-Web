      <param-name>ref</param-name>
      <param-value>HELLO WORLD</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>SimpleFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
